<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_budget"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin">

    <Button
        android:text="Modifier mon budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnModif" />

    <LinearLayout
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Budget"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblTtlBudget"
            android:layout_weight = "1"
            android:padding="20dp"/>
        <TextView
            android:text=""
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblBudget"
            android:layout_weight = "1"
            android:paddingLeft="5dp"/>
        <TextView
            android:text="Solde"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblTtlSolde"
            android:layout_weight = "1"
            android:padding="20dp"/>
        <TextView
            android:text=""
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblSolde"
            android:layout_weight = "1"
            android:paddingLeft="5dp"/>
    </LinearLayout>

    <Button
        android:text="DÃ©penses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnDepense" />

    <Button
        android:text="Recettes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnRecette" />

    <LinearLayout
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Emprunts"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnEmp"
            android:layout_weight = "1"/>

        <Button
            android:text="Dettes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnDette"
            android:layout_weight = "1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/listDep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:text="" />


</LinearLayout>